<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs', {pageName: "Products Index"}) %>

    <body>  
		
        <%- include('partials/nav.ejs') %>

        <section>
            <div>
                <h2 class="title">All Products</h2>
            </div>
        </section>

        <main class="container">
            	<!-- the remainder of our HTML in index.ejs-->
            <div>
                <% for(let idx = 0; idx < products.length; idx++){ %> 
                <% const product = products[idx] %>
                <div>
                    <img class ='card-image' src="<%= product.image %>" alt="Placeholder image" />
                        <div class>
                            <h3>
                                <a href="/products/<%= idx %>">
                                <%= product.name %> 
                                </a>
                            </h3>
                            <p>$<%= product.price %></p>
                        </div>
                <% } %>
            </div>
        </main>
	</body>
</html>